---
import type { CollectionEntry } from 'astro:content'
import Base from '../layouts/base.astro'
import PageHero from '../components/pagehero.astro'
import image from '../assets/backgrounds/404.png'

const frontmatter: CollectionEntry<'page'>['data'] = {
  title: '404: Not found',
  description: "You just hit a route that doesn't exist... the sadness.",
  image: image
}
---

<Base frontmatter={frontmatter}>
  <header>
    <PageHero title={frontmatter.title!} description={frontmatter.description} {image} />
  </header>
</Base>
